{
  "extends": ["expo/tsconfig.base"],
  "exclude": ["__tests__/**/*-test.ts"],
  "compilerOptions": {
    "strict": true,
    "types": ["jest"],
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@context": ["src/context"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"],
      "@store": ["src/store"],
      "@styles": ["src/styles"],
      "@utils": ["src/utils"],
    }
  }
}
